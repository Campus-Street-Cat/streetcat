<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/catInfo_backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/actionModeCloseDrawable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/catInfo_backButton"
                android:layout_centerHorizontal="true"
                android:text="고양이 정보"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/layout1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:id="@+id/profile_image"
                android:src="@drawable/pompom1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/profile_image">

                <ImageView
                    android:id="@+id/school_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/school"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="50dp"
                    android:id="@+id/school_name"
                    android:text="한국항공대학교"
                    app:layout_constraintStart_toEndOf="@+id/school_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/name_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/school_icon" />

                <TextView
                    android:id="@+id/cat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="37dp"
                    android:text="폼폼이"
                    app:layout_constraintStart_toEndOf="@+id/name_icon"
                    app:layout_constraintTop_toTopOf="@id/school_name" />

                <ImageView
                    android:id="@+id/siren"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/siren"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/name_icon" />

                <TextView
                    android:id="@+id/sick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="37dp"
                    android:text="다리에서 피가 나요"
                    android:textColor="#FF0000"
                    app:layout_constraintStart_toEndOf="@+id/siren"
                    app:layout_constraintTop_toTopOf="@id/cat_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout2"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/detail_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:padding="10dp"
                android:text="상세 정보"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cat_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/orange"
                android:padding="10dp"
                android:text="고양이가 이상해요!"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/galleryView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@id/layout3"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_gallery" />

    </RelativeLayout>
</LinearLayout>
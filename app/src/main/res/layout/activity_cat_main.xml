<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/catInfo_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_vertical"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="고양이 정보"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/layout1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cat_profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/info"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/cat_profile_image">

            <ImageButton
                android:id="@+id/cat_star"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                android:scaleType="centerInside"
                android:background="@color/fui_transparent"
                android:tint="@color/gray"

                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/school_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/school"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cat_star" />

            <TextView
                android:id="@+id/school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"

                android:text="한국항공대학교"
                app:layout_constraintStart_toEndOf="@+id/school_icon"
                app:layout_constraintTop_toTopOf="@id/school_icon" />

            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/school_icon" />

            <TextView
                android:id="@+id/cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="37dp"
                android:text="폼폼이"
                app:layout_constraintStart_toEndOf="@+id/name_icon"
                app:layout_constraintTop_toTopOf="@id/school_name" />

            <ImageView
                android:id="@+id/siren"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/siren"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/name_icon" />

            <TextView
                android:id="@+id/sick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="37dp"
                android:text="다리에서 피가 나요"
                android:textColor="#FF0000"
                app:layout_constraintStart_toEndOf="@+id/siren"
                app:layout_constraintTop_toTopOf="@id/cat_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/layout2">

        <Button
            android:id="@+id/detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:padding="10dp"
            android:text="상세 정보"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cat_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:padding="10dp"
            android:text="고양이가 이상해요!"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/galleryView"
        android:layout_width="match_parent"
        android:layout_height="395dp"


        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/layout3"
        tools:listitem="@layout/item_gallery" />

    <Button
        android:id="@+id/btn_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="131dp"
        android:text="고양이 밥주기"
        app:layout_constraintBottom_toBottomOf="@+id/galleryView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
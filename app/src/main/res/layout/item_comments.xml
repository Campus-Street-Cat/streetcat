<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_user_profile_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:layout_marginStart="10dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintStart_toEndOf="@+id/comment_user_profile_image"
        app:layout_constraintTop_toTopOf="@+id/comment_user_profile_image" />


    <ImageButton
        android:id="@+id/comment_image_heart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"

        android:background="@color/fui_transparent"
        android:scaleType="centerCrop"

        android:src="@drawable/heart"
        app:layout_constraintEnd_toStartOf="@id/comment_more_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/comment_more_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="8dp"

        android:background="@color/fui_transparent"
        android:scaleType="centerCrop"

        android:src="@drawable/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginVertical="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="55dp"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@+id/comment_user_profile_image" />

    <TextView
        android:id="@+id/comment_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요"

        android:layout_marginStart="15dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment" />

    <TextView
        android:id="@+id/comment_like_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"

        android:layout_marginStart="5dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toEndOf="@id/comment_like"
        app:layout_constraintTop_toBottomOf="@+id/comment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개"


        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toEndOf="@+id/comment_like_cnt"
        app:layout_constraintTop_toBottomOf="@+id/comment"/>
</androidx.constraintlayout.widget.ConstraintLayout>
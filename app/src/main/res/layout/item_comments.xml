<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_user_profile_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:layout_marginStart="10dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintStart_toEndOf="@+id/comment_user_profile_image"
        app:layout_constraintTop_toTopOf="@+id/comment_user_profile_image" />

    <LinearLayout
        android:id="@+id/comment_functions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/comment_image_heart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"

            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/heart" />

        <ImageButton
            android:id="@+id/comment_image_comments"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"

            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/comments" />
    </LinearLayout>

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_user_profile_image" />

    <TextView
        android:id="@+id/comment_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요"

        android:layout_marginStart="15dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment" />

    <TextView
        android:id="@+id/comment_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3개"

        android:layout_marginStart="5dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toEndOf="@+id/comment_like"
        app:layout_constraintTop_toBottomOf="@+id/comment"/>



</androidx.constraintlayout.widget.ConstraintLayout>